{
	"extends": ["@tsconfig/node24", "@tsconfig/strictest"],
	"compilerOptions": {
		"rootDir": ".",
		"outDir": "./dist",
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["src/**/*", "scripts/**/*"],
	"exclude": ["node_modules", "dist"]
}
